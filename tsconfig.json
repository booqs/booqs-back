{
    "compilerOptions": {
        "paths": {
            "@/*": [
                "./*"
            ]
        },
        "esModuleInterop": true,
        "declaration": true,
        "incremental": true,
        "module": "commonjs",
        "target": "es2019",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "strict": true,
        "suppressImplicitAnyIndexErrors": false,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "experimentalDecorators": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "cli/**/*",
        "core/**/*",
        "parser/**/*",
        "server/**/*"
    ]
}