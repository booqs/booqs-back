{
  "name": "booqs-back",
  "private": true,
  "version": "0.1.0",
  "description": "Booqs backend",
  "engines": {
    "node": "23.x"
  },
  "main": "dist/server/index.js",
  "types": "dist/server/index.d.ts",
  "bin": {
    "booqs": "dist/cli/index.js"
  },
  "_moduleAliases": {
    "@/*": "./*"
  },
  "scripts": {
    "cli": "ts-node cli/index.ts",
    "prepare": "npm run build",
    "lint": "eslint . --ext .ts",
    "build": "tsc && npm run lint",
    "start": "node dist/server/index.js",
    "dev": "npm run https",
    "http": "cross-env NODE_ENV=development nodemon server/index.ts",
    "https": "cross-env NODE_ENV=development PORT=4001 nodemon server/index.ts & npx local-ssl-proxy --key ../localhost-key.pem --cert ../localhost.pem --source 4000 --target 4001"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/booqs/booqs-back"
  },
  "keywords": [
    "booqs",
    "backend"
  ],
  "author": "Anton Shakirzianov",
  "bugs": {
    "url": "https://github.com/booqs/booqs-back/issues"
  },
  "homepage": "https://github.com/booqs/booqs-back",
  "devDependencies": {
    "@stylistic/eslint-plugin": "^4.2.0",
    "@stylistic/eslint-plugin-ts": "^4.2.0",
    "@types/cors": "^2.8.17",
    "@types/css": "0.0.38",
    "@types/graphql-type-json": "^0.3.5",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/lodash": "^4.17.16",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.13",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.23.0",
    "eslint-config-next": "^15.3.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "@aws-sdk/client-s3": "^3.772.0",
    "@simplewebauthn/server": "^13.1.1",
    "@simplewebauthn/types": "^12.0.0",
    "axios": "^1.8.4",
    "body-parser": "^1.20.3",
    "booqs-epub": "^0.2.0",
    "cookie": "^1.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "css": "^3.0.0",
    "css-select": "^5.1.0",
    "domutils": "^3.2.2",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "graphql": "^16.10.0",
    "graphql-tools": "^9.0.18",
    "graphql-type-json": "^0.3.2",
    "htmlparser2": "^10.0.0",
    "jsonwebtoken": "^9.0.2",
    "jszip": "^3.10.1",
    "jwks-rsa": "^3.2.0",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.3",
    "mongoose": "^8.12.2",
    "multer": "^1.4.5-lts.2",
    "openai": "^4.89.0",
    "sharp": "^0.33.5",
    "slugify": "^1.6.6",
    "specificity": "^1.0.0"
  }
}